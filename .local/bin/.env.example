# .env.example - Template configuration for photo sync script
# Copy this file to .env and update with your actual paths

# Base paths
BASE_SOURCE="/Volumes/YourDrive/YourFolder"
BASE_DESTINATION="/Volumes/YourNAS/YourFolder"

# Catalog folders to sync (comma-separated, full paths)
# Format: source_path:destination_path
# Multiple catalogs example: "/path/to/catalog1:/nas/catalog1,/path/to/catalog2:/nas/catalog2"
CATALOG="/Volumes/YourDrive/CatalogFolder:/Volumes/YourNAS/CatalogFolder"

# Optional: Override rsync path
# RSYNC_OVERRIDE="/custom/path/to/rsync"
